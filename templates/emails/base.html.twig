<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <title>Reset password to Splitey</title>
    <style type="text/css">
        body {
            font-family: Helvetica, Arial, sans-serif;
            background-color: #ffffff;
        }

        #container {
            width: 100%;
        }

        #box {
            width: 300px;
            background-color: #f6f6f6;
            padding: 16px;
            border-radius: 8px;
        }

        #hello {
            font-weight: 700;
            font-size: 16px;
        }

        #content {
            padding-top: 16px;
        }
    </style>
</head>
<body>

<table id="container" role="presentation" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>&nbsp;</td>
        <td id="box">
            <table>
                <tr>
                    <td align="center">
                        <img src="{{ email.image('@images/splitey_black_logo.png') }}" alt="Splitey logo">
                    </td>
                </tr>
                <tr>
                    <td id="content">
                        {% block content %}
                        {% endblock %}
                    </td>
                </tr>
            </table>
        </td>
        <td>&nbsp;</td>
    </tr>
</table>
</body>
</html>
